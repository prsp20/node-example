{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "plugin:jest/recommended"
  ],
  "plugins": [
    "standard",
    "promise",
    "import"
  ],
  "globals": {
    "sinon": true,
    "expect": true
  },
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "semi": [
      2,
      "always"
    ],
    "no-var": [
      1
    ],
    "no-console": [
      0
    ],
    "prefer-const": [
      1
    ],
    "handle-callback-err": [
      0
    ],
    "camelcase": [
      0
    ],
    "space-before-function-paren": [
      0
    ],
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-duplicate-imports": [0],
    "import/order": [0]
  }
}